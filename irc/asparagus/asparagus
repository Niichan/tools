function testmodule {
if $PYTHON -c "import $1" > /dev/null; then
	true
else
	echo "!!! library $1 not found. Please install $1 from system package repositories"
	exit
fi
}

echo "--- Updating niilib"
git submodule update --init 2> /dev/null > /dev/nul

if [ -d env ]; then
	echo "--- Virtualenv found"
else
	echo "!!! Setting up virtual environment"
	if [ -x "$(which virtualenv)" ]; then
		virtualenv env --python=python2.7 > /dev/null
		echo "--- Virtual environment set up"
	else
		echo "!!! Virtualenv not installed"
		exit
	fi
fi

echo "--- Installing venv dependencies"
env/bin/pip install -r requirements.txt > /dev/null

source env/bin/activate

if [ -x "$(which pypy-c)" ]; then
	PYTHON=pypy-c
	echo "!!! pypy-c found! Cod will run much faster!"
fi

echo "--- Cleaning up previous pyc files"
rm -rf modules/*.pyc
rm -rf src/**/*.pyc

$PYTHON $MAIN $1

